<Window x:Class="YWIL_YouWorkItLooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YWIL_YouWorkItLooks"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Closing="ControlClosing"
        Title="Intel RealSense Software-Device .NET Example" Height="780" Width="1280" x:Name="control">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="helpMessageTextBlock" HorizontalAlignment="Center" Height="50" Width="1280" Background="Black" Foreground="White" FontSize="21" Padding="10" TextAlignment="Center"></TextBlock>
        <Grid Grid.Row="1" >
            <Image x:Name="colorRealSenseImage" Height="720" Width="1280"/>
            <Canvas x:Name="objectDetectionCanvas" Height="720" Width="1280"/>
        </Grid>
    </Grid>
</Window>