                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" x:Name="stepChekingImage" Height="120" Width="120" Margin="25 20 15 20"/>
                    <Image Grid.Column="1" x:Name="stepReferenceImage" Height="140" Width="140" Margin="10"/>
                </Grid>
                <TextBlock Grid.Row="2" x:Name="stepInfoTextBlock" Height="220" Width="320" Background="Black" Foreground="White" FontSize="18" Padding="18" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
